<?xml version="1.0" encoding="utf-8"?>
<!--this layout breaks for some screens-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="menu.gui.MenuActivity">

    <Button
        android:id="@+id/custButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/customer_button"
        android:onClick="goToCustomerActivity"/>

    <Button
        android:id="@+id/menu_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_add"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:onClick="addCustomerView"/>

    <Button
        android:id="@+id/menu_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_modify"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/menu_add"
        android:layout_marginTop="75dp"
        android:onClick="modifyCustomerView"/>

    <Button
        android:id="@+id/menu_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_delete"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/menu_modify"
        android:layout_marginTop="75dp"
        android:onClick="deleteCustomerView"/>

    <Button
        android:id="@+id/menu_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_show"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/menu_delete"
        android:layout_marginTop="75dp"
        android:onClick="displayCustomerView"/>

</RelativeLayout>
